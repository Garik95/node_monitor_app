<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Отчеты</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/bootstrap.min.css'>
    <script src='/js/bootstrap.min.js'></script>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1 style="margin-top: 20%;">New run:</h1>
            </div>
        <div class="row">
            <div class="col-xl-1"></div>
            <div class="col-xl-10">
                <form action="/run" method="get">
                    <table class="table">
                        <thead>
                            <tr>
                              <th scope="col">App name</th>
                              <th scope="col">Location</th>
                              <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <th><input type="text" class="form-control" name="appname" required></th>
                            <th><input type="text" class="form-control" name="location" required></th>
                            <th><button type="submit" class="btn btn-outline-success">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-play-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11.596 8.697l-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
                                </svg>
                                </button>
                            </th>
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="col-xl-1"></div>
        </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h1>Running Apps:</h1>
            </div>
        <div class="row">
            <div class="col-xl-1"></div>
            <div class="col-xl-10">
                <form action="/terminate" method="get">
                    <table class="table">
                        <thead>
                            <tr>
                              <th scope="col">Thread ID</th>
                              <th scope="col">App name</th>
                              <th scope="col">Location</th>
                              <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <% apps.forEach(function(app) { %>
                        <tbody>
                            <th><%= app.ID %></th>
                            <th><%= app.Application %></th>
                            <th><%= app.Location %></th>
                            <th>
                                <a href="/reload?thread=<%= app.ID %>" type="submit" class="btn btn-outline-warning">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-clockwise" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                                    </svg>
                                </a>
                                <a href="/terminate?thread=<%= app.ID %>" type="submit" class="btn btn-outline-danger">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-stop-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M5 3.5h6A1.5 1.5 0 0 1 12.5 5v6a1.5 1.5 0 0 1-1.5 1.5H5A1.5 1.5 0 0 1 3.5 11V5A1.5 1.5 0 0 1 5 3.5z"/>
                                    </svg>
                                </a>
                            </th>
                        </tbody>
                        <% }); %>
                    </table>
                </form>
            </div>
            <div class="col-xl-1"></div>
        </div>
        </div>
    </div>
</body>
</html>